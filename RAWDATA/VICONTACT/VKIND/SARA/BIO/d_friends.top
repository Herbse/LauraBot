topic: ~friends_t ()
# Hier wurde keep und repeat herausgenommen, damit das mehrmalige (offene) Fragen hintereinander nach dem Tanzen  unterschiedliche Antworten generiert

#t: specific test to hobbies topic ^keep() ^repeat() 

#specific questions/answers depending on general context
u: () ^keep() ^refine()
    # name
    a: (^names()) $$intent=names Florian. 
    # age
    a: (^age()) $$intent=age Florian ist neun, wie ich. 
    # mood
    a: (^mood()) $$intent=mood Gut.
    # job
    a: (^job()) $$intent=job Der geht auch in die Schule.
    # relationship_f
    a: (^relationship_f()) $$intent=relationship_f Der ist mein bester Freund. 
    # relationship_o
    a: (^relationship_o()) $$intent=relationship_o Florian ist voll cool!
    # time together
    a: (^time_together()) $$intent=time_together Immer in der Schule und im Hort. 
    # time relationship
    a: (^time()) $$intent=time_relationship Seit ich zur Schule gehe. 
    # activity together
    a: (^activity_together()) $$intent=activity_together  
        b: ($friendCounter==1) ^reuse(FRIENDS_2)
        b: () ^reuse(FRIENDS_1) 
    # activity
    a: (^activity()) $$intent=activity Der geht auch in die Schule.
    # places together
    a: (^places_together()) $$intent=places_together In der Schule und im Hort. 


#specific questions/answers depending on what narrative answer was given before
u: () ^keep() ^refine()
    # personal_opinion
    a: (^personal_opinion()) $$intent=personal_opinion ^refine()
        b: ($friendCounter==1) Voll cool.
        b: ($friendCounter==2) ^reuse(FRIENDS_3)
        b: ($friendCounter==3) Voll cool.
        b: ($friendCounter==4) Das ist witzig.
       
    # other_opinion
    a: (^other_opinion()) $$intent=other_opinion ^respond(~ignorance)
    # place
    a: (^place()) $$intent=place ^refine()
        b: ($friendCounter==1) Auf dem Schulhof.
        b: ($friendCounter==2) Im Hort.
        b: ($friendCounter==3) $$answerCategory=ignorance ^respond(~ignorance)
        b: ($friendCounter==4) Auf dem Schulweg.
    # individual
    a: (^individual()) $$intent=individual ^refine()
        b: ($friendCounter==1) Meine Klasse.
        b: ($friendCounter==2) Florian.
        b: ($friendCounter==3) Florian und ich.
        b: ($friendCounter==4) $$answerCategory=ignorance ^respond(~ignorance)
    # reason
    a: (^reason()) $$intent=reason ^refine()
        b: ($friendCounter==1) $$answerCategory=ignorance ^respond(~ignorance)
        b: ($friendCounter==2) Weil er mein bester Freund ist.
        b: ($friendCounter==3) $$answerCategory=ignorance ^respond(~ignorance)
        b: ($friendCounter==4) Das macht Spaß.
    # example
    a: (^example()) $$intent=example ^refine()
        b: () $$nextAnswer = yes
    # explanation
    a: (^explanation()) $$intent=explanation ^refine()
        b: ($friendCounter==3) Das Krokodil, was Florian mir gebastelt hat.
        b: () $$nextAnswer = yes
    
    # follow-up
    a: (^follow_up()) $$intent=follow_up ^refine()
        b: () $$nextAnswer = yes
    # log questions that were not catched by macros
    a: ($$answerCategory==specific _*) $$question = '_0 ^log(FILE USERS/lostspecificlog.txt $$question \n)

# Narrative Antworten----------------------------------------------------------------------------------------

